<style>
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #f8f9fa;
        }
        .form-header {
            margin-bottom: 20px;
        }
    </style>

<div class="container mt-5">
        <div class="form-container">
            <h1 class="form-header text-center">Seleccionar Usuario y Nota</h1>
            <form action="/form" method="POST">
                <div class="form-group">
                    <label for="userEmail">Usuario:</label>
                    <select name="userEmail" id="userEmail" class="form-control" required>
                        {{#each users}}
                            <option value="{{this.email}}">{{this.email}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="noteTitle">Nota:</label>
                    <select name="noteTitle" id="noteTitle" class="form-control" required>
                        {{#each notes}}
                            <option value="{{this.title}}">{{this.title}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Enviar</button>
            </form>
        </div>
    </div>
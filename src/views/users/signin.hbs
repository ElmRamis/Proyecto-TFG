<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Account Register</h3>
            </div>
            <img src="/images/LogoOcean2.png" class="logo m-4" alt="Logo">
            <div class="card-body">
                <form action="/users/singin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{this.email}}" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" value="{{this.password}}">
                    </div>
                    <div class="form-group">
                        <a href="/users/forgot">I forgot my password</a>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Sign IN</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>